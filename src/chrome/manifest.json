{
  "manifest_version": 2,

  "name": "YouTube TV for Browser",
  "description": "Enables YouTube TV for traditional browser",
  "version": "0.1",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.youtube.com/tv*"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "YouTube TV for Browser"
  }
}