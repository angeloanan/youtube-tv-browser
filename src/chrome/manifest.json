{
  "manifest_version": 3,

  "name": "YouTube TV for Browser",
  "description": "Enables YouTube TV for traditional browser",
  "version": "0.1",

  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.youtube.com/tv*"
  ],
  "background": {
    "service_worker": 
      "background.js"
    
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/tv*"
      ],
      "js": ["touch_handler.js"]
    }
  ]
}
